@model IEnumerable<BeeIdentified.Data.Entities.BeeData>
<h3>Select a bee to add it to your sighting history or use the buttons at the bottom to go back or start over</h3>

<p>
    @* Bee List *@
    <table class="table">

        <thead>
            <tr>
                <th>
                    This is my Bee!
                </th>

                @*<th>
                        Bee Image
                    </th>*@

                <th>
                    Common Name
                </th>

                <th>
                    Latin Name
                </th>

                <th>
                    Conservation Status
                </th>

                @*<th>
                            More Info
                    </th>*@
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <button type="submit" value=@item.BeeID class="submitbutton">Add To History </button>
                    </td>

                    @*<td>
                            <img src="@Url.Content("~/" + @item.Photo)" width="200" />
                        </td>*@

                    <td>@item.CommonName</td>

                    <td>@item.LatinName</td>

                    <td>@item.ConservationStatus</td>
                </tr>
            }
        </tbody>

    </table>
</p>

<p>
    @*Navigation Buttons*@
    <input type="button" value="Start Over" id="StartOverButton" />
</p>

