@model BeeIdentified.Data.Entities.TempBeeBuilder
<h3>
    Select a few colors that describe the critter you saw. Choose up to 3.
</h3>

<form name="pickColor" method="post">
    <p>
        <select name="colorone">
            <option value="0">     </option>
            <option value="1">Black</option>
            <option value="2">White</option>
            <option value="4">Yellow</option>
            <option value="7">Green</option>
            <option value="6">Blue</option>
            <option value="9">Purple</option>
            <option value="3">Brown</option>
            <option value="8">Red</option>
            <option value="5">Orange</option>
        </select>

        <select name="colortwo">
            <option value="0">     </option>
            <option value="1">Black</option>
            <option value="2">White</option>
            <option value="4">Yellow</option>
            <option value="7">Green</option>
            <option value="6">Blue</option>
            <option value="9">Purple</option>
            <option value="3">Brown</option>
            <option value="8">Red</option>
            <option value="5">Orange</option>
        </select>

        <select name="colorthree">
            <option value="0">     </option>
            <option value="1">Black</option>
            <option value="2">White</option>
            <option value="4">Yellow</option>
            <option value="7">Green</option>
            <option value="6">Blue</option>
            <option value="9">Purple</option>
            <option value="3">Brown</option>
            <option value="8">Red</option>
            <option value="5">Orange</option>
        </select>
    </p>

    <p>
        @*Navigation Buttons*@
        <input type="button" value="Start Over" id="StartOverButton" />
        <button type="submit" value="Submit" id="NextButton"> Next </button>
    </p>
</form>


<script type="text/javascript">
    document.getElementById("StartOverButton").onclick = function () {
        location.href = "/Sighting/BasicInfo";
    };

    document.getElementById("NextButton").onclick = function () {
        if (document.pickColor.colorone.value == 0 && document.pickColor.colortwo.value == 0 && document.pickColor.colorthree.value == 0) {
            alert("Please select at least one color")
            location.href = "/Sighting/Colors";
        }

        location.href = "/Sighting/PossibleMatches";
    }

</script>