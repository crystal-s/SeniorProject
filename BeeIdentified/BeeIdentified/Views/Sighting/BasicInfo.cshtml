@* Need script to ensure that all fields are filled out. Need to make sure it's a bee. *@

<script type="text/javascript">
    function date() {
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();

        if (dd < 10) {
            dd = '0' + dd
        }

        if (mm < 10) {
            mm = '0' + mm
        }

        today = yyyy + '-' + mm + '-' + dd;
        document.getElementById("SeenDate").defaultValue = today;
    }

    document.getElementById("NextButton").onclick = function () {


        var isfuzzy = document.getElementById("true").checked;
        var notfuzzy = document.getElementById("false").checked;
        if (!isfuzzy && !notfuzzy)
        {
            alert("Was your bee fuzzy? Please select one.");
        }

        if (isfuzzy)
        {
            // alert("Fuzzy: " + isfuzzy);
            // Pass this value to the next page with the date
            location.href = "/Sighting/Colors";
        }
        if (notfuzzy)
        {   // Pass the value to the next page with the date
            location.href = "/Sighting/Colors";
        }


    };

    document.getElementById("StartOverButton").onclick = function () {
        location.href = "/Sighting/BasicInfo";
    };

</script>